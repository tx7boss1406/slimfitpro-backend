generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  xp        Int        @default(0)
  level     Int        @default(1)
  unlocked  Json?
  photo     String?
  createdAt DateTime   @default(now())

  missions    UserMission[]
  rewards     UserReward[]
  activity    UserActivity[]
  summaries   DailySummary[]
  goals       Goal[]               // âœ… Adicionado
  nutrition   Nutrition[]          // âœ… Adicionado
}

// ----------------------------------------------------
// MISSÃ•ES
// ----------------------------------------------------

model Mission {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  dayNumber   Int
  xpReward    Int            @default(50)
  details     Json?
  createdAt   DateTime       @default(now())

  users       UserMission[]
}

model UserMission {
  id          Int       @id @default(autoincrement())
  userId      Int
  missionId   Int
  completed   Boolean   @default(false)
  completedAt DateTime?
  unlockedAt  DateTime?

  user        User      @relation(fields: [userId], references: [id])
  mission     Mission   @relation(fields: [missionId], references: [id])

  @@unique([userId, missionId], name: "userId_missionId")
}

// ----------------------------------------------------
// RECOMPENSAS
// ----------------------------------------------------

model Reward {
  id           Int           @id @default(autoincrement())
  title        String
  description  String
  requiredDays Int
  imageUrl     String?
  createdAt    DateTime       @default(now())

  users        UserReward[]
}

model UserReward {
  id          Int       @id @default(autoincrement())
  userId      Int
  rewardId    Int
  unlocked    Boolean   @default(false)
  unlockedAt  DateTime?

  user        User      @relation(fields: [userId], references: [id])
  reward      Reward    @relation(fields: [rewardId], references: [id])
}

// ----------------------------------------------------
// ATIVIDADES E RELATÃ“RIOS
// ----------------------------------------------------

model UserActivity {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  metadata  Json?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
}

model DailySummary {
  id           Int      @id @default(autoincrement())
  userId       Int
  date         DateTime
  missionsDone Int      @default(0)
  xpEarned     Int      @default(0)
  streak       Int      @default(0)
  level        Int
  createdAt    DateTime @default(now())

  user         User     @relation(fields: [userId], references: [id])

  @@unique([userId, date], name: "user_day_unique")
}

// ----------------------------------------------------
// ðŸ”¥ ADICIONADO AGORA â€” TABELA DE METAS (GOALS)
// ----------------------------------------------------

model Goal {
  id       Int    @id @default(autoincrement())
  userId   Int
  title    String
  progress Int    @default(0)

  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ----------------------------------------------------
// ðŸ”¥ ADICIONADO AGORA â€” TABELA DE NUTRIÃ‡ÃƒO
// ----------------------------------------------------

model Nutrition {
  id       Int      @id @default(autoincrement())
  userId   Int
  date     DateTime @default(now())
  calories Int      @default(0)
  protein  Int      @default(0)
  carbs    Int      @default(0)
  fats     Int      @default(0)

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date], name: "nutrition_day_unique")
}
